
<%- if controller_name != 'sessions' %>
  <%= link_to "이미 가입 하셨나요? 이곳을 눌러 로그인 해주세요.", new_session_path(resource_name), class: 'btn btn-outline-primary btn-md' %><br />
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "처음이세요? 이곳을 눌러 가입해주세요.", new_registration_path(resource_name), class: 'btn btn-outline-primary btn-md' %><br />
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "가입 완료를 위한 이메일을 받지 못하셨나요?", new_confirmation_path(resource_name), class: 'btn btn-outline-primary btn-md' %><br />
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class: 'btn btn-light btn-md' %><br />
<% end %>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider) %><br />
  <% end %>
<% end %>
