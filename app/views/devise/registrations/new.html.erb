<h2>가입</h2>

<%= render "devise/shared/links" %>

<hr>
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :nickname, label: '닉네임',
                required: true, 
                autofocus: true, 
                hint: ("")
                 %>
    <%= f.input :email, label: '이메일',
                required: true,
                hint: ("로그인할때 사용 하실 이메일주소를 입력해주세요. 입력하신 이메일로 가입 완료 메시지가 전송됩니다."),
                input_html: { autocomplete: "email" } %>
    <%= f.input :password, label: '비밀번호',
                required: true,
                hint: ("#{@minimum_password_length}자 이상 입력해주세요." if @minimum_password_length),
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :password_confirmation, label: '비밀번호 재입력',
                required: true,
                input_html: { autocomplete: "new-password" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "가입", class: 'btn btn-primary btn-md btn-block' %>
  </div>
<% end %>