<h1>My Page</h1>

<div class="card">
  <div class="card-body">
    <h5 class="card-title"><%= @user.nickname %></h5>
    <h6 class="card-subtitle mb-2 text-muted"><%= @user.email %></h6>
    <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
    <%= link_to 'Edit my information', edit_user_registration_path, class: 'btn btn-primary btn-sm' %>
  </div>
</div>
<hr>

<% if @user.posts.length > 1 %>
  <h3>My events</h3>
<% else %>
  <h3>My event</h3>
<% end %>

<ul class="list-group">
  <% @user.posts.each do |post| %>
    <li class="list-group-item">
      <div class="btn-group" role="group">
          <%= link_to 'Edit', edit_post_path(post), class: 'btn btn-warning btn-sm' %>
          <%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
      </div>
      <%= link_to post.title, post %>
    </li>
  <% end %>
</ul>

